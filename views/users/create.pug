extends ../layouts/common.pug       
block content
    h1 Create User
    
    if errors
        each error in errors
            .alert.alert-danger= error

    form(action="/users/create", method="post")
        .form-group
            label name
            input.form-control(type='text', name="name", value= values ?
             values.name : '')
        .form-group
            label phone
            input.form-control(type='text', name="phone", value= values?
            values.phone : '')

        button.btn.btn-primary(type='submit') Create