extends ../layouts/common.pug       
block content
    h1 Login
    if errors
        each error in errors   
            .alert.alert-danger= error
    

    form( method="post")
        .form-group
            label Email
            input#email.form-control(type='text', name="email", value= values ?
             values.email : '')
        .form-group
            label password
            input#password.form-control(type='password', name="password", value= values?
            values.password : '')

        button.btn.btn-primary(type='submit') Login